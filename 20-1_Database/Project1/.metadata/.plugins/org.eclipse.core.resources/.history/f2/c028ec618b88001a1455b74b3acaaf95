			System.out.println("Update Table");
			
			sql = "SELECT * FROM actorObtain";
			System.out.println("------actorObtain------");
			System.out.println("|awardID" + "\t|awardName" + "\t|year");
			while(rs.next()) {
				System.out.print("|" + rs.getInt(1) + "\t\t|" + rs.getInt(2) + "\t\t|" + rs.getString(3));
